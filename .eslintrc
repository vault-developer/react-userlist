{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "simple-import-sort"
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "src", "./src"
          ]
        ],
        "extensions": [
          ".js"
        ]
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": 0,
    "comma-dangle": 0,
    "import/prefer-default-export": 0,
    "arrow-parens": 0,
    "no-trailing-spaces": 0,
    "no-shadow": 0,
    "simple-import-sort/imports": ["error",
      {
        "groups": [
          // Packages. `react` related packages come first.
          ["^react", "^@?\\w"],
          // Internal packages.
          ["^src"],
          // Hooks imports.
          ["^use[A-Z]"],
          // Relative imports
          ["^\\."],
          // Style imports.
          ["^.*\\.less$"]
        ]
      }
    ]
  }
}
